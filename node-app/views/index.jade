extends ./layout.jade

block content
  .row(ng-app="lb", ng-controller="LBController as ctl", style="margin-bottom: 800px;")
    .col.s12.blue.lighten-1
      .col.s10.offset-s1
        h4.white-text Application load balancing

    .col.s10.offset-s1
      .card.blue-grey.darken-1
        .card-content.white-text
          span.card-title= "Page générée par le server n°" + id

      .card.blue-grey.darken-1
        .card-content.white-text
          span.card-title Appels au serveur :

          ul.collection.black-text
            li.collection-item(ng-show="ctl.calls.length == 0")
              i Aucun appel...
            li.collection-item.lighten-3(ng-repeat="call in ctl.calls", class="{{ call.id == 0 && 'yellow' || call.id == 1 && 'green' || call.id == 2 && 'red ' }}")
              | Appel au serveur {{ call.id }}

    .fixed-action-btn(style="bottom: 45px; right: 24px;")
      a.btn-floating.btn-large.waves-effect.waves-light.blue.tooltipped(ng-click="ctl.smallWork()", data-position="left", data-delay="50", data-tooltip="Petite requête")
        i.large.material-icons play_arrow
      ul
        li
          a.btn-floating.waves-effect.waves-light.red.tooltipped(ng-click="ctl.clear()", data-position="left", data-delay="50", data-tooltip="Effacer")
            i.large.material-icons delete
        li
          a.btn-floating.waves-effect.waves-light.orange.tooltipped(ng-click="ctl.bigWork()", data-position="left", data-delay="50", data-tooltip="Grosse travail")
            i.large.material-icons fast_forward
        //li
          a.btn-floating.waves-effect.waves-light.orange.tooltipped(ng-click="ctl.bigRequest()", data-position="left", data-delay="50", data-tooltip="Grosse requête")
            i.large.material-icons receipt

